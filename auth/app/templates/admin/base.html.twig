<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>UKHPC Test | AdminPanel</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="{{ asset('assets/plugins/bootstrap/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="{{ asset('assets/css/AdminLTE.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/skins/skin-green.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/admin.min.css') }}">
    <link rel="stylesheet" href="{{ asset("assets/plugins/toastr/toastr.min.css") }}">
    <link rel="shortcut icon" href="{{ asset('assets/img/logo.png') }}" type="image/png">
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    {% block styles %}{% endblock %}
</head>
<body class="hold-transition skin-green sidebar-mini">
<div class="wrapper">
    <header class="main-header">
        <a href="/admin" class="logo">
            <span class="logo-mini"><b>U</b>T</span>
            <span class="logo-lg"><b>UKHPC</b>Test</span>
        </a>
        <nav class="navbar navbar-static-top">
            <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
        </nav>
    </header>
    <aside class="main-sidebar">
        <section class="sidebar">
            <ul class="sidebar-menu">
                    <li>
                        <a href="{{ path('admin_user_index') }}">
                            <i class="fa fa-user"></i> <span>Пользователи</span>
                        </a>
                    </li>
                <li>
                    <a href="/admin/olympic">
                        <i class="fa fa-th"></i> <span>Олимпиады</span>
                    </a>
                </li>
                <li>
                    <a href="/admin/tour">
                        <i class="fa fa-th"></i> <span>Туры</span>
                    </a>
                </li>
            </ul>
        </section>
    </aside>
    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                {% block title %}{% endblock %}
                <small>{% block subtitle %}{% endblock %}</small>
            </h1>
        </section>
        <section class="content">
            {% block content %}
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">{% block boxTitle %}{% endblock %}</h3>
                        <div class="box-tools pull-right">
                            {% block boxButtons %}{% endblock %}
                            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                                    title="Collapse">
                                <i class="fa fa-minus"></i></button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip"
                                    title="Remove">
                                <i class="fa fa-times"></i></button>
                        </div>
                    </div>
                    <div class="box-body">
                        {% block boxBody %}{% endblock %}
                    </div>
                    <div class="box-footer">
                        {% block boxFooter %}{% endblock %}
                    </div>
                </div>
                {% block contentFooter %}{% endblock %}
            {% endblock %}
        </section>
    </div>
    <footer class="main-footer">
        <div class="pull-right hidden-xs">
            <b>Version</b> 0.1
        </div>
        <strong>Copyright &copy; <a href="http://ukptk.kz/">UKHPC</a>.</strong> All rights
        reserved.
    </footer>
    <div class="control-sidebar-bg"></div>
</div>

<div id="messages">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-{{ label }} message" data-type="{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
</div>

<script src="{{ asset('assets/plugins/jQuery/jQuery-2.2.0.min.js') }}"></script>
<script src="{{ asset("assets/plugins/toastr/toastr.min.js") }}"></script>
<script src="{{ asset('assets/plugins/bootstrap/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('assets/js/app.min.js') }}"></script>
<script src="{{ asset('assets/js/alert.js') }}"></script>
{% block javascript %}{% endblock %}
</body>
</html>
